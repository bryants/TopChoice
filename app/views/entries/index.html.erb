<h1>Entries#index</h1>

<script src="../../assets/javascripts/jquery-1.9.1.js"></script>

<table id="results">
  <% @survey_entries.each do |o| %>
    <tr>
      <td><%= o['title'] %></td>  
      <td><%= o['votes'] %></td>
    </tr>  
  <% end %>
</table>

<form action="/survey_entries" method="POST" id="surveyEntries">
  <% SurveyEntry::FORM_OPTIONS.each do |o| %>
  <p><button name="choice" value="<%= o %>"><%= o %></button></p>
  <% end %>
</form>

<script>
  $(function(){
    $(&ldquo;#results&rdquo;).chart();
  });
</script>
